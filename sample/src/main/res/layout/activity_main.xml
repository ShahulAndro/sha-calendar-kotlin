<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <Button
            android:id="@+id/single_selection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Single"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/multiple_selection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Multiple"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/range_selection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Range"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/rtl_selection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="RTL"
            android:layout_margin="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">
        <Button
            android:id="@+id/custom_dayview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Custom DayView"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/highlight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Highlight"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/select_dates"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Select dates"
            android:layout_margin="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <Button
            android:id="@+id/infinite_load"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Infinite Load"
            android:layout_margin="2dp"/>
    </LinearLayout>

    <com.sha.calendar.kotlin.lib.view.CalendarPickerRecyclerView
        android:id="@+id/calendar_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>