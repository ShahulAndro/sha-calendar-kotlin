<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:id="@+id/week_days"
    android:weightSum="1.0">
    <TextView
        android:id="@+id/dayName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUN"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_weight="0.143"/>
    <TextView
        android:id="@+id/dayName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MON"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_weight="0.143"/>
    <TextView
        android:id="@+id/dayName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TUE"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_weight="0.143"/>
    <TextView
        android:id="@+id/dayName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WED"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_weight="0.143"/>
    <TextView
        android:id="@+id/dayName5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THU"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_weight="0.143"/>
    <TextView
        android:id="@+id/dayName6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRI"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_weight="0.143"/>
    <TextView
        android:id="@+id/dayName7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAT"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_weight="0.143"/>
</LinearLayout>